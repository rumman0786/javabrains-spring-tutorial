<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="triangle" class="com.darkace.javabrains.Triangle">
        <constructor-arg value="Equilateral"/>
        <constructor-arg value="20"/>
    </bean>

    <bean id="triangle2" class="com.darkace.javabrains.Triangle">
        <constructor-arg type="java.lang.String" value="Equilateral"/>
    </bean>

    <bean id="triangle3" class="com.darkace.javabrains.Triangle">
        <constructor-arg type="int" value="20"/>
    </bean>

    <bean id="triangle4" class="com.darkace.javabrains.Triangle">
        <constructor-arg index="0" value="Isoscales"/>
        <constructor-arg index="1" value="30"/>
    </bean>
</beans>